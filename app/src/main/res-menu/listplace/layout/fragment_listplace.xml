<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="listplace"
            type="com.yoesuv.infomalangbatu.menu.listplace.viewmodels.FragmentListPlaceViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayoutListPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:showView="@{listplace.isLoading}">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewListPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bind:hideView="@{listplace.isLoading}">

            <ProgressBar
                android:id="@+id/progressBarListPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_48sdp" />

        </RelativeLayout>

    </RelativeLayout>

</layout>