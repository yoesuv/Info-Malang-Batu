        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/navigationTabStrip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
