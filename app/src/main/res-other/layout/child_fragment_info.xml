<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_other_global_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewAppInfo"
                    android:layout_width="@dimen/icon_app_info_size"
                    android:layout_height="@dimen/icon_app_info_size"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_app_info"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fragment_other_global_margin"
                    android:layout_marginStart="@dimen/fragment_other_global_margin"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageViewAppInfo"
                    android:layout_toEndOf="@id/imageViewAppInfo">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:textColor="@color/default_text_color"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/default_other_text_size"
                        android:textColor="@color/default_text_color"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/divider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textStyle="bold"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@color/default_text_color"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_email"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@color/default_text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_twitter"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@color/default_text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_twitter"
                    android:drawableStart="@drawable/ic_twitter"/>

                <include layout="@layout/divider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/support"
                    android:textSize="@dimen/default_other_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_color"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@color/default_text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_hearts"
                    android:drawableStart="@drawable/ic_hearts"/>

                <include layout="@layout/divider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discl"
                    android:textSize="@dimen/default_other_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_color"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@color/default_text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_high_priority"
                    android:drawableStart="@drawable/ic_high_priority"/>

                <include layout="@layout/divider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewGithub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link_github"
                    android:textSize="@dimen/default_other_text_size"
                    android:textColor="@drawable/text_color_github"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_github"
                    android:drawableStart="@drawable/ic_github"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>